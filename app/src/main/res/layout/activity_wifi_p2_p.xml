    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layBottom"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/layBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="4dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="85"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:background="@drawable/shape1"
            android:backgroundTint="#F1F1F1"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="13"
                android:layout_height="match_parent"
                android:id="@+id/iPickFile"
                android:src="@drawable/ic_add_file"/>

            <EditText
                android:id="@+id/writeMsg"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:layout_height="match_parent"
                android:hint="Message"
                android:inputType="text|textNoSuggestions"
                android:padding="10dp"
                android:background="@null"
                />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="4dp"
            app:fabSize="mini"
            app:fabCustomSize="45dp"
            app:maxImageSize="30dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_send"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="5dp"
        android:background="@drawable/shape2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iFileType"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_music"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:singleLine="true"
                tools:text="Kesa h bahi delhi ja rha kya kal tu \n or
                suna teriesi tesiðŸ˜ŠðŸ˜ŠðŸ˜Š" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFileSent"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="#727171"
                    android:textSize="12sp"
                    tools:text="35kb"
                    />

                <ProgressBar
                    android:id="@+id/progressFileSent"
                    android:layout_width="0dp"
                    android:layout_weight="60"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

                <TextView
                    android:id="@+id/tvFileTotalSize"
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="#727171"
                    android:textSize="11sp"
                    tools:text="35kb"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>